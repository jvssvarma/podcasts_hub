<%= form_for ([@podcast, @episode]) do |f| %>

	<div class="field">
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</div>

	<div class="field">
		<%= f.label :description %><br>
		<%= f.text_area :description %>
	</div>

	<div class="field">
		<%= f.label :episode_image %><br>
		<%= f.file_field :episode_image %>
	</div>

	<div class="field">
		<%= f.label :audio_file %><br>
		<%= f.file_field :audio_file %>
	</div>

	<%= f.submit class: "button button_submit button_block" %>
<% end %>
